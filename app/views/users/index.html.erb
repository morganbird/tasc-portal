<h2>Listing users</h2>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th>Employee</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= check_box_tag 'admin', 'true', user.admin?, disabled: true %></td>
        <td><%= check_box_tag 'employee', 'true', user.employee?, disabled: true %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
