<% if f.object.user_id == current_user.id %>
<div class='nested-fields'>
  <%= f.hidden_field :user_id %>

  <div class="field large-1 columns">
    <%= f.label :rating, "Rating" %>
    <%= f.select :rating, options_for_select([nil,1,2,3,4,5], f.object.rating) %>
  </div>
  <div class="field large-6 columns left">
    <%= f.label :comments, "Comments" %>
    <%= f.text_area :comments %>
  </div>

</div>

<% else %>
<%= f.hidden_field :user_id %>
<%= f.hidden_field :rating %>
<%= f.hidden_field :comments %>
<% end %>
