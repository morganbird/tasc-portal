<%= form_for(@provider) do |f| %>
  <% if @provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% @provider.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <fieldset>
    <legend>Evaluations</legend>
    <div id='ratings row'>
      <%= f.fields_for :ratings do |rating| %>
        <%= render 'rating_fields', :f => rating %>
      <% end %>
    </div>
  </fieldset>


  <fieldset>
    <legend>Personal Information</legend>

    <div class="field large-4 columns">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :middle_initial %><br>
      <%= f.text_field :middle_initial %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :cell %><br>
      <%= f.text_field :cell %>
    </div>
    <div class="field large-6 columns">
      <%= f.label :address1 %><br>
      <%= f.text_field :address1 %>
    </div>
    <div class="field large-6 columns">
      <%= f.label :address2 %><br>
      <%= f.text_field :address2 %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :city %><br>
      <%= f.text_field :city %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :state %><br>
      <%= f.text_field :state %>
    </div>
    <div class="field large-4 columns">
      <%= f.label :zip %><br>
      <%= f.text_field :zip %>
    </div>
  </fieldset>

  <fieldset>
    <legend>Education and Experience</legend>
    <div class='row'>
      <div class="field large-2 columns">
        <%= f.label :rate %><br>
        <%= f.text_field :rate %>
      </div>
      <div class="field large-4 columns">
        <%= f.label :position %><br>
        <%= f.text_field :position %>
      </div>
      <div class="field large-4 columns">
        <%= f.label :organization %><br>
        <%= f.text_field :organization %>
      </div>
      <div class="field large-2 columns">
        <%= f.label :years_experience %><br>
        <%= f.number_field :years_experience %>
      </div>

    </div>
    <div class='row'>
      <div class='field large-2 columns'>
        <%= f.label :language_ids, 'Languages' %>
        <%= f.select :language_ids, Language.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
      </div>
    </div>
    <div class='row'>

      <div id='educations'>
        <%= f.fields_for :educations do |education| %>
          <%= render 'education_fields', :f => education %>


        <% end %>
      </div>
    </div>
    <div class='row'>
      <div class='links column'>
        <%= link_to_add_association 'add degree', f, :educations %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Resume</legend>
    <div class="field columns">
      <%= f.label :resume, 'Enter resume in plain text format' %><br>
      <%= f.text_area :resume %>
    </div>
  </fieldset>
  <fieldset>
    <legend>Expertise Profile</legend>

    <div id='expertises'>
      <%= f.fields_for :expertises do |expertise| %>
        <%= render 'expertise_fields', :f => expertise %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'add expertise', f, :expertises %>
      </div>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
