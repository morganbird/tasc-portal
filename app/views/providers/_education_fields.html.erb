<div class='nested-fields'>
  <div class="field large-4 columns">
    <%= f.label :degree_id, "Degree" %>
    <%= f.select :degree_id, options_for_select(Degree.all.collect {|d| [d.name, d.id]  }, f.object.degree_id) %>
  </div>
  <div class="field large-4 columns">
    <%= f.label :major, "Major" %>
    <%= f.text_field :major %>
  </div>
  <div class='large-4 columns'>
    <%= link_to_remove_association "remove degree", f %>
  </div>
</div>
